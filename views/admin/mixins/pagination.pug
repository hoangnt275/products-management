mixin pagination(pagination)
  nav 
    ul(class="pagination")
      if(pagination.currentPage>1)
        li(class="page-item")
          button(class="page-link"
          button-pagination= pagination.currentPage-1 ) Trang truoc 
      -for (let i=1; i<=pagination.limitPage;i++)
        li(class=`page-item ${pagination.currentPage==i ? "active":""}`)
          button(class="page-link"
          button-pagination=i) #{i}
      if(pagination.currentPage<pagination.limitPage)
        li(class="page-item")
          button(class="page-link"
          button-pagination= pagination.currentPage+1) Ke tiep 