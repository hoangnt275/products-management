mixin alert-success(time)
  - if (messages.success)
    .message.info
      div(class="message info alert alert-success" show-alert show-time=time)
        span= messages.success
        span(close-alert) x

mixin alert-error(time)
  - if (messages.error)
    .message.info
      div(class="message info alert alert-danger" show-alert show-time=time)
        span= messages.error
        span(close-alert) x


  