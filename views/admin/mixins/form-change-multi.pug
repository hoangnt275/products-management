mixin form-change-multi(path)
  form(action=path, 
      method="post"
      form-change-multi)
        .d-flex.align-items-center.mb-3
          .form-group.mb-0
            select.form-control(name="type" class="form-control")
              option(disabled selected) -- Chon hanh dong --
              option(value="active") Hoat dong 
              option(value="inactive") Ngung hoat dong
              option(value="delete-all") Xoa tat ca
              option(value="change-position") Thay doi vi tri

          .form-group.mb-0
            input(type="text", name="ids"
            value=""
            class="form-control d-none")
          button.btn.btn-primary.ml-2(type="submit") Ap dung   