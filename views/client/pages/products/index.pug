extends ../../layout/default.pug
include ../../mixins/box-head.pug
block main
  .container
    .row 
      .col-12 
        +box-head("Danh sach san pham")
    
    .row 
      each item in products
        .col-4 
          .product-list 
            .product-item
              img(src=item.thumbnail, alt="", srcset="")
              .info
                a(class="name " href=`/products/details/${item.slug}`) #{item.title}
                p.price #{item.newPrice}$
                p.oldPrice #{item.price}$
                p.discount -#{item.discountPercentage}%